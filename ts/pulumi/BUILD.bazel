load("//bzl:rules.bzl", "bazel_lint")
load("//js:rules.bzl", "js_binary")
load("//ts:rules.bzl", "ts_project")
load("//yml:test.bzl", "yaml_lint_test")

package(default_visibility = ["//ci:__subpackages__"])

yaml_lint_test(
    name = "validate_yml",
)

js_binary(
    name = "preview",
    data = [
        ":pulumi",
    ],
    entry_point = "preview.js",
)

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
)

ts_project(
    name = "pulumi",
    srcs = [
        "deploy_to_staging.ts",
        "index.ts",
        "preview.ts",
        "setMocks.ts",
        "stack.ts",
    ],
    data = [
        ":pulumi_local",
        "//project/zemn.me:next",
        "//ts/pulumi/shadwell.im/thomas",
        "//ts/pulumi/zemn.me/availability:next",
        "//ts/pulumi/zemn.me/static",
    ],
    visibility = ["//:__subpackages__"],
    deps = [
        "//:node_modules/@pulumi/aws",
        "//:node_modules/@pulumi/pulumi",
        "//:node_modules/@pulumi/random",
        "//:node_modules/@types/node",
        "//ts/github/actions",
        "//ts/pulumi/baby.computer",
        "//ts/pulumi/eggsfordogs.com",
        "//ts/pulumi/github.com/zemn-me/do-sync",
        "//ts/pulumi/lib",
        "//ts/pulumi/lib/twilio",
        "//ts/pulumi/lulu.computer",
        "//ts/pulumi/pleaseintroducemetoyour.dog",
        "//ts/pulumi/shadwell.im",
        "//ts/pulumi/zemn.me",
    ],
)

filegroup(
    name = "all_ts_srcs",
    srcs = [
        "deploy_to_staging.ts",
        "index.ts",
        "preview.ts",
        "setMocks.ts",
        "stack.ts",
    ],
    visibility = ["//:__subpackages__"],
)

genrule(
    name = "pulumi_local",
    srcs = ["//bin/linux/pulumi"],
    outs = ["pulumi_bin"],
    cmd = """
cp $< $@
    """,
)
