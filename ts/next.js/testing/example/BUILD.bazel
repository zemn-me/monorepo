load("//bzl:rules.bzl", "bazel_lint")
load("//ts:rules.bzl", "jest_test", "ts_project")
load("//ts/next.js:rules.bzl", "next_project")

ts_project(
    name = "ts_sources",
    deps = [
        "//:node_modules/@bazel/runfiles",
        "//:node_modules/@jest/globals",
        "//:node_modules/@types/node",
        "//:node_modules/@types/react",
        "//:node_modules/react",
        "//:node_modules/react-dom",
        "//ts",
        "//ts/math",
    ],
)

next_project(
    name = "example",
    srcs = [":ts_sources"],
)

jest_test(
    name = "test_running_dev_server",
    srcs = ["launch_server_test.js"],
    data = [
        ":dev",
        ":ts_sources",
    ],
    env = {
        "NEXT_SERVER_BINARY": "$(rlocationpath :dev)",
        "BAZEL_BINDIR": "$(BINDIR)",
    },
)

jest_test(
    name = "test_running_prod_server",
    srcs = ["launch_server_prod_test.js"],
    data = [
        ":start",
        ":ts_sources",
    ],
    env = {
        "NEXT_SERVER_BINARY": "$(rlocationpath :start)",
        "BAZEL_BINDIR": "$(BINDIR)",
    },
)

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
)
