load("//bzl:rules.bzl", "bazel_lint")
load("//py:rules.bzl", "py_binary", "py_library", "py_test")

py_library(
    name = "post_upgrade",
    srcs = [
        "__init__.py",
        "integrity.py",
    ],
    visibility = ["//:__subpackages__"],
)

py_binary(
    name = "post_upgrade_bin",
    srcs = ["__main__.py"],
    main = "__main__.py",
    visibility = ["//:__subpackages__"],
    deps = [":post_upgrade"],
)

py_test(
    name = "post_upgrade_test",
    srcs = ["__test__.py"],
    main = "__test__.py",
    deps = [":post_upgrade"],
)

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
)
