load("//bzl:rules.bzl", "bazel_lint")
load("//ts:rules.bzl", "jest_test", "ts_project")

package(default_visibility = ["//visibility:public"])

exports_files([
    "foo.ts",
    "foo_test.ts",
])

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
    visibility = ["//:__subpackages__"],
)

filegroup(
    name = "all_ts_srcs",
    srcs = [
        "foo.ts",
        "foo_test.ts",
    ],
    visibility = ["//:__subpackages__"],
)

ts_project(
    name = "jsdom",
    srcs = ["foo.ts"],
    visibility = ["//:__subpackages__"],
    deps = ["//:node_modules/@types/node"],
)

ts_project(
    name = "jsdom_tests",
    srcs = ["foo_test.ts"],
    visibility = ["//:__subpackages__"],
    deps = [
        ":jsdom",
        "//:node_modules/@jest/globals",
        "//:node_modules/@types/node",
    ],
)

jest_test(
    name = "tests",
    srcs = ["foo_test.js"],
    jsdom = True,
    visibility = ["//:__subpackages__"],
    deps = [":jsdom_tests"],
)
