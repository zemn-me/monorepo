load("//bzl:rules.bzl", "bazel_lint")
load("//rs:rules.bzl", "rust_binary")
load("//ts:rules.bzl", "ts_project")

package(default_visibility = ["//visibility:public"])

rust_binary(
    name = "testing",
    srcs = glob(["*.rs"]),
    deps = ["//rs/ts"],
)

genrule(
    name = "output",
    outs = ["output.ts"],
    cmd = """
    $(location :testing) > $@
    """,
    tools = [":testing"],
)

ts_project(
    name = "output_ts",
    srcs = ["output.ts"],
    ignores_lint = ["output.ts"],
)
bazel_lint( name = "bazel_lint" )
