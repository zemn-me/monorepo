{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Rust: rust-project.json",
			"command": "${workspaceFolder}/sh/bin/bazel",
			"args": [
				"run",
				"//.vscode:gen_rust_project"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": [],
                        "presentation": {
                                "reveal": "never",
                                "group": "preprep",
                                "close": true,
                                "panel": "dedicated",
                        }
		},
		{
			"label": "Python: Venv",
			"command": "${workspaceFolder}/sh/bin/bazel",
			"args": [
				"run",
				"//.vscode:ibazel",
				"run",
				"//.vscode:activate_venv"
			],
                        "options": {
                                "cwd": "${workspaceFolder}"
                        },
			"presentation": {
				"close": true,
				"reveal": "never",
				"group": "preprep",
				"panel": "dedicated",
			},
			"isBackground": true,
			"problemMatcher": {
				"source": "venv",
				"severity": "info",
				"pattern": [
					{
						"regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^iBazel +\\[[^\\]]+\\]: Notifying of changes$",
					"endsPattern": "^iBazel +\\[[^\\]]+\\]: Starting...$",
				}
			}
		},
		{
			"label": "Sapling: install hooks",
			"command": "${workspaceFolder}/sh/bin/bazel",
			"args": [
				"run",
				"//.vscode:install_sapling_hooks",
				"--",
				"${workspaceFolder}"
			],
			"presentation": {
				"close": true,
				"group": "preprep",
				"reveal": "never",
				"panel": "dedicated",
			},
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
