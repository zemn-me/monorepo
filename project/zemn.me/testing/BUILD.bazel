load("@io_bazel_rules_go//go:def.bzl", "go_test")
load("@rules_itest//private:itest.bzl", "itest_service", "service_test")
load("//bzl:rules.bzl", "bazel_lint")
load("//ts:rules.bzl", "jest_test", "ts_project")

package(default_visibility = ["//visibility:public"])

service_test(
    name = "integration_test",
    flaky = True,
    services = [
        "//project/zemn.me:itest_service",
        ":oidc_provider_itest_service",
    ],
    test = ":testing_test",
)

itest_service(
    name = "oidc_provider_itest_service",
    args = [
        "--port",
        ":$${PORT}",
    ],
    autoassign_port = True,
    exe = "//project/zemn.me/testing/cmd/oidc_provider:oidc_provider",
    http_health_check_address = "http://localhost:$${PORT}/.well-known/openid-configuration",
)

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
)

ts_project(
    name = "ts",
    srcs = ["browser_test.ts"],
    data = [
        "//project/zemn.me:out",
    ],
    deps = [
        "//:node_modules/@bazel/runfiles",
        "//:node_modules/@jest/globals",
        "//:node_modules/@types/jest",
        "//:node_modules/@types/node",
        "//:node_modules/@types/selenium-webdriver",
        "//:node_modules/@types/serve-handler",
        "//:node_modules/fast-glob",
        "//:node_modules/jose",
        "//:node_modules/selenium-webdriver",
        "//:node_modules/serve-handler",
        "//ts/selenium",
    ],
)

jest_test(
    name = "testing",
    size = "medium",
    srcs = ["browser_test.js"],
    data = [
        ":ts",
        "//project/zemn.me/api/cmd/localserver",
        "//ts/oidc",
    ],
)

go_test(
    name = "testing_test",
    srcs = [
        "browser_test.go",
        "go_basic_test.go",
    ],
    tags = ["manual"],  # keep; needs integration testing harness.
    deps = [
        "//go/seleniumutil",
        "//project/zemn.me/testing/oidc",
        "@com_github_tebeka_selenium//:selenium",
        "@com_github_tebeka_selenium//log",
    ],
)
