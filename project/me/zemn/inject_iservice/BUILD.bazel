py_library(
    name = "inject_iservice",
    srcs = [
        "inject_iservice.py",
        "prod_env_main.py",
    ],
    visibility = ["//:__subpackages__"],
    deps = [
        "@pip//pydantic",
        "@rules_python//python/runfiles",
    ],
)

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
)
