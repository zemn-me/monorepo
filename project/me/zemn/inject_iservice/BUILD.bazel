load("//bzl:rules.bzl", "bazel_lint")
load("//py:rules.bzl", "py_binary", "py_library")

py_binary(
    name = "inject_iservice_bin",
    srcs = ["__main__.py"],
    data = [
        "//project/me/zemn:dev",
    ],
    env = {
        "NEXTJS_BINARY": "$(rlocationpath @@//project/me/zemn:dev)",
    },
    main = "__main__.py",
    visibility = ["//:__subpackages__"],
    deps = [":inject_iservice"],
)

py_binary(
    name = "inject_iservice_prod_env_bin",
    srcs = ["prod_env_main.py"],
    data = [
        "//project/me/zemn:dev",
    ],
    env = {
        "NEXTJS_BINARY": "$(rlocationpath @@//project/me/zemn:dev)",
        "ZEMN_ITEST_ENV": "prod",
    },
    main = "__main__.py",
    visibility = ["//:__subpackages__"],
    deps = [
        ":inject_iservice",
    ],
